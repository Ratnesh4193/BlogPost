<%- include('partials/header', {userName: userName}) %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>
    
     <!--Social Login Buttons-->
     <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
         
<!--    GOOGLE-->
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Log In with Google
          </a>
          
        </div>
        
<!--    GITHUB-->
        <div class="card-body">
          <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
            <i class="fab fa-github"></i>
            Log In with Github
          </a>
        </div>

<!--    Register-->
        <div class="card-body">
          <a class="btn btn-block btn-social btn-yahoo" href="/register" role="button">
            
            Sign Up for BlogPost
          </a>
        </div>
        
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
