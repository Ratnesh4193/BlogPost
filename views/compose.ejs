<%- include('partials/header', {userName: userName}) %>

<h1>Compose</h1>

<form action="/" method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Title</label>
        <input type="text" name="postTitle" class="form-control" id="exampleFormControlInput1" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Post</label>
        <textarea name="postBody" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Pen down your thoughts here."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>
